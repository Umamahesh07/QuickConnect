<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload XML File</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="pb-2 mt-4 mb-2 border-bottom">
            <h2>Upload XML File</h2>      
        </div>
        <div class="card col-md-7">
            <div class="card-body">
                <form id="uploadForm" onsubmit="submitForm(event)">
                    <div class="form-group d-flex">
                        <label for="xmlfile" style="margin-right: 3rem;">Choose a XML file and upload</label>
                        <input type="file" class="form-control-file mb-2" id="xmlfile" name="xmlfile" accept=".xml" required>
                    </div>
                    <button class="btn btn-primary" type="submit">Upload file</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        async function submitForm(event) {
          event.preventDefault();
    
          const form = document.getElementById("uploadForm");
          const formData = new FormData(form);
    
          try {
            const response = await fetch('/upload-xml/upload', {
              method: 'POST',
              body: formData
            });
    
            const result = await response.json();
    
            if (response.ok) {
              // Show success alert
              alert(result.message);
            } else {
              // Show error alert
              alert(result.message);
            }
          } catch (error) {
            // Show error alert if there's a network or other issue
            alert("Error submitting the form.");
          }
        }
      </script>
      
</body>
</html>
